<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        {% block stylesheets %}
        <title>Salon</title>
    
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- BOOTSTRAP START -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <!-- BOOTSTRAP END -->

        <!-- FOLDER MAIN FONTS -->
        <link rel="stylesheet" href="{{ asset('fonts/icomoon/style.css') }}">
        <link rel="stylesheet" href="{{ asset('fonts/flaticon/font/flaticon.css') }}">
        <link rel="stylesheet" href="{{ asset('fonts/material-design-iconic-font/css/material-design-iconic-font.min.css') }}">
        <!-- FOLDER MAIN FONTS END -->

        <!-- FOLDER MAIN CSS -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker.css') }}">
        <link rel="stylesheet" href="{{ asset('css/jquery.fancybox.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/owl.theme.default.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/aos.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/sourcesanspro-font.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style2.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style3.css') }}">
        <!-- FOLDER MAIN FONTS End -->
        
        <!-- EXTERN LINK START -->
        <link href="https://fonts.googleapis.com/css?family=DM+Sans:300,400,700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.5.1/main.min.css" integrity="sha256-uq9PNlMzB+1h01Ij9cx7zeE2OR2pLAfRw3uUUOOPKdA=" crossorigin="anonymous">
        <!-- EXTERN LINK End -->
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <div class="site-wrap" id="home-section">

            <!-- HEADER START -->
            {% block headerStart %}
            <header class="site-navbar site-navbar-target" role="banner">
                <div class="container">
                    <div class="row align-items-center position-relative">
                        <div class="col-3 ">
                            <div class="site-logo">
                                <a href="index.html">Demo Hair Coiffure</a>
                            </div>
                        </div> 
                        <div class="col-9  text-right"> 
                            <span class="d-inline-block d-lg-none"><a href="#" class="text-white site-menu-toggle js-menu-toggle py-5 text-white"><span class="icon-menu h3 text-white"></span></a></span>
                            <nav class="site-navigation text-right ml-auto d-none d-lg-block"  role="navigation"> 
                                <ul class="site-menu main-menu js-clone-nav ml-auto ">
                                    <li><a href="{{ path('home_page') }}" class="nav-link">Accueil</a></li>
                                    <li><a href="{{ path('services', {'page': 1}) }}" class="nav-link">Nos prestations</a></li>
                                    <li><a href="{{ path('about_of_company') }}" class="nav-link">Qui sommes nous</a></li>
                   
                                    {% if not is_granted('ROLE_USER')  %}
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="" role="button" aria-haspopup="true" aria-expanded="false">Connexion/Inscription</a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="{{ path('sign_up') }}">Inscription</a>
                                            <a class="dropdown-item" href="{{ path('sing_in') }}">Connexion</a>
                                        </div>
                                    </li>
                                    {% endif %}
                                    {% if is_granted('ROLE_USER')  %}
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="" role="button" aria-haspopup="true" aria-expanded="false">Compte</a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="{{ path('event_planning_update') }}">Modifier mes rendez-vous</a>
                                            <a class="dropdown-item" href="{{ path('event_planning_delete') }}">Supprimer mes rendez-vous</a>
                                            <a class="dropdown-item" href="{{ path('update_password') }}">Modifier son mot de passe</a>
                                            <a class="dropdown-item" href="{{ path('update_email_user') }}">Modifier son Email</a>
                                            <a class="dropdown-item" href="{{ path('update_number_user') }}">Modifier son numéro de téléphone</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
                                        </div>
                                    </li>
                                    {% endif %}
                                </ul>
                            </nav> 
                        </div>     
                    </div>
                </div>
            </header>
            {% endblock %}
            <!-- HEADER END -->

            <!-- HEADER PICTURE START -->
            {% block headerPictureStart %}
            <div class="ftco-blocks-cover-1">
                <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('{{ asset('images/'~picture.name) }}')">
                    <div class="container">
                        <div class="row align-items-center justify-content-center text-center">
                            <div class="col-md-7">
                                <h1 class="mb-3">Cheveux et Barbe</h1>
                                <p>Coiffeur uniquement pour les hommes.</p>
                                <p><a href="{{ path('about_of_company') }}" class="btn btn-primary">Plus d'info</a></p>
                            </div>
                        </div>
                    </div> 
                </div>
            </div>
            {% endblock %}
            <!-- HEADER PICTURE END -->
         
            <!-- ONE HAIRCUT DISPLAY START -->
            {% block oneHaircut %}
            <div class="site-section">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 mb-5 mb-lg-0">
                            <div class="img-years">
                                <img src="{{ asset('images/'~haircut.image) }}" alt="Image" class="img-fluid">
                                <div class="year">
                                    <span>{{haircut.price}}€</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5 ml-auto pl-lg-5 text-center">
                            <h3 class="scissors text-center">{{haircut.name}}</h3>
                            <p class="mb-5 lead">{{haircut.description}}</p>
                            {% if is_granted('ROLE_USER')  %}
                            <p><a href="{{ path('online_booking', {'id': haircut.id}) }}"><button type="button" class="btn btn-danger">RDV</button></a></p>
                            {% endif %}
                            {% if not is_granted('ROLE_USER')  %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="" role="button" aria-haspopup="true" aria-expanded="false">Connexion/Inscription</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('sign_up') }}">Inscription</a>
                                    <a class="dropdown-item" href="{{ path('sing_in') }}">Connexion</a>
                                </div>
                            </li>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- ONE HAIRCUT DISPLAY END -->

            <!-- HAIRCUTS DISPLAY START -->
            {% block haircuts %}
            <div class="site-section bg-light">
                <div class="container">
                    <div class="row justify-content-center  mb-5">
                        <div class="col-md-7 text-center">
                            <div class="alert alert success">
                                {% for message in app.flashes('success') %} {{ message }} {% endfor %}
                            </div> 
                            <div class="alert alert error">
                                <h2>{% for message in app.flashes('error') %} {{ message }} {% endfor %}</h2>
                            </div> 
                            <h3 class="scissors text-center">Prestation du salon</h3>
                            <p class="mb-5 lead">
                                Vous trouverez ci-dessous tous les services que offre le salon.
                            </p>
                            <p class="text-center">
                                <a href="#" class="btn btn-primary custom-prev">Précédent</a>
                                <a href="#" class="btn btn-primary custom-next">Suivant</a>
                            </p>
                        </div>
                    </div>  
                    <div class="row">   
                        <div class="col-12">
                            <div class="nonloop-block-13 owl-carousel d-flex"> 
                                {% for haircut in haircuts %}
                                <div class="item-1 h">
                                    <a href="{{ path('details_haircut', {'id': haircut.id}) }}"><img src="{{ asset('images/'~haircut.image) }}" alt="Image" class="img-fluid"></a>
                                    <div class="item-1-contents">
                                        <h3>{{haircut.name}}</h3>
                                        <ul>
                                            <li class="d-flex">
                                                <span>Prix de la prestation</span> 
                                                <span class="price ml-auto">{{haircut.price}} euros.</span>
                                            </li>
                                            <li class="d-flex">
                                                <span><a href="{{ path('details_haircut', {'id': haircut.id}) }}" class="btn btn-secondary">Plus d'info</a></span> 
                                                {% if is_granted('ROLE_USER')  %}
                                                <span class="price ml-auto"><a href="{{ path('online_booking', {'id': haircut.id}) }}" class="btn btn-danger">RDV</a></span>
                                                {% endif %}
                                            </li> 
                                        </ul>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>   
                        </div>  
                    </div> 
                </div>
            </div> 
            {% endblock %}
            <!-- HAIRCUTS DISPLAY END -->

            <!-- ABOUT OF COMPANY START -->
            {% block aboutOfCompany %}
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">
                            <h2 required autofocus>Demo Hair Coiffure</h2>
                            <p>Le salon est ouvert depuis 2017 sur la commune de Donnemarie-Dontilly. C'est un salon destiné uniquement au homme. Fort de son succès, les prestations se font uniquement sur rendez-vous. Ainsi, vous-avez le loisir de ne pas patienter sur place en attendant votre tour et d'être dans un calme absolu lors d'une coupe de cheveux.</p>
                            <h2>Services</h2>
                            <p>Sur place, nous proposons plusieur coupes de cheveux, taillage de barbe et soins du cheveux. Vous avez la possibilité de voir nos prestations dans l'onglet prestation situé dans le menu.</p>
                            <h2>Localisation</h2>
                            <p> 8 Rue Raymond Bellague, 77520 Donnemarie-Dontilly. Nous sommes ouvert du Mardi au Samedi 24/24 . </p>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- ABOUT OF COMPANY END -->

            <!-- ONLINE BOOKING START -->
            {% block onlineBooking %}
            <div class="row">   
                <div class="col-12">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 33%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                            Etape 1 sur 3
                        </div>
                    </div>
                    <br>
                    <div class="alert alert error">
                        {% for message in app.flashes('error') %} {{ message }} {% endfor %}
                    </div>
                    <br>
                    <h1>Sélectionnez la date du RDV</h1>
                    <div id='calendar'></div>
                    <br>
                </div>  
            </div>  
            {% endblock %}
            <!-- ONLINE BOOKING END -->
 
            <!-- PASSWORD UPDATE START-->
            {% block passwordUpdate %}
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">
                            <form action="{{ path('update_password') }}" method="post">
                                {{form_start(form)}}
                                <h3>Modifier</h3>
                                <div class="form-wrapper">
                                    {{ form_label(form.password.first) }}
                                    {{ form_widget(form.password.first ) }} 
                                </div>
                                <div class="form-wrapper">
                                    {{ form_label(form.password.second) }}
                                    {{ form_widget(form.password.second ) }}
                                </div>
      
                                <div class="form-wrapper">
                                    <button>Modifier</button>
                                </div>
                                {{form_end(form)}}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- PASSWORD UPDATE END-->
 
            <!-- EMAIL UPDATE START -->
            {% block emailUpdate %}
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">
                            <form action="{{ path('update_email_user') }}" method="post">
                                {{form_start(form)}}
                                <h3>Modifier</h3>
                                <div class="form-wrapper">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email ) }}
                                </div>
      
                                <div class="form-wrapper">
                                    <button>Modifier</button>
                                </div>
                                {{form_end(form)}}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- EMAIL UPDATE END -->

            <!-- NUMBER UPDATE START -->
            {% block numberUpdate %}
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">
                            <form action="{{ path('update_number_user') }}" method="post">
                                {{form_start(form)}}
                                <h3>Modifier</h3>
                                <div class="form-wrapper">
                                    {{ form_label(form.number) }}
                                    {{ form_widget(form.number ) }}
                                </div>
      
                                <div class="form-wrapper">
                                    <button>Modifier</button>
                                </div>
                                {{form_end(form)}}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- NUMBER UPDATE END -->

            <!-- SIGN UP START -->
            {% block signUp %} 
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">
                            <ul>   
                                {% if form_errors(form.email) %}
                                <div class="alert alert-danger">
                                    {{ form_errors(form.email) }}    
                                </div>
                                {% endif %} 
                                {% if form_errors(form.password.first) %}
                                <div class="alert alert-danger">
                                    {{ form_errors(form.password.first) }}    
                                </div>
                                {% endif %}    
                            </ul>
                            
                            <form action="{{ path('sign_up') }}" method="post" >
                                {{form_start(form)}}
                                <h3>Inscription</h3>
             
                                    <div class="form-wrapper">
                                        {{ form_label(form.name) }}
                                        {{ form_widget(form.name ) }} 
                                    </div>

                                    
                                    <div class="form-wrapper">
                                        {{ form_label(form.email) }}
                                        {{ form_widget(form.email ) }}
                                    </div>
                                    
                                
                                <div class="form-wrapper">
                                    {{ form_label(form.number) }}
                                    {{ form_widget(form.number ) }}
                                </div>
                                
                                    
                                    <div class="form-wrapper">
                                        {{ form_label(form.password.first) }}
                                        {{ form_widget(form.password.first ) }} 
                                    </div>
                                    
                                    
                                    <div class="form-wrapper">
                                        {{ form_label(form.password.second) }}
                                        {{ form_widget(form.password.second ) }}
                                    </div>
                                    
                               

                                
                                <input type="hidden" name="token" value="{{ csrf_token('validateUser') }}"/>
          
                                <div class="form-wrapper">
                                    <button>S'inscrire</button>
                                </div>
                                {{form_end(form)}}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- SIGN UP END -->

            <!-- CONNECTION LINK START -->
            {% block connectionLink %}
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">

                            <form action="{{ path('secu_login') }}" method="post">
                                <h3>Se connecter</h3>
                                
                                    <div class="form-wrapper">
                                        <label for="inputEmail">Email</label>
                                        <input type="email"  name="email" id="inputEmail" class="form-control" required autofocus>
                                    </div>
                                    <div class="form-wrapper">
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    </div>
                                
          
                                <button>Connexion</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- CONNECTION LINK END -->

            <!-- SIGN IN START --> 
            {% block signIn %}
            <div class="alert alert error">
                {% for message in app.flashes('error') %} {{ message }} {% endfor %}
            </div>
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">

                            <form action="{{ path('app_login') }}" method="post">
                                {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <h3>Connexion</h3>
                                
                                <div class="form-wrapper">
                                    <label for="inputemail">Email</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputemail" class="form-control" required autofocus>
                                </div>
                                <div class="form-wrapper">
                                    <label for="inputPassword">Password</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                                </div>
                                
                                <div class="form-wrapper">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="remember_me" name="_remember_me">
                                        Se souvenir de moi 
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <br>
                                <a href="{{ path('connectionLink') }}">Mot de passe oublié</a>
                                <button>Connexion</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- SIGN IN END -->

            <!-- SERVICES START -->
            {% block services %}
            <div class="site-section bg-light"> 
                <div class="container">
                    <div class="row">           
                        {% for service in serviceNumber %}
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="post-entry-1 h-100">
                                <a href="single.html">
                                    <img src="{{ asset('images/'~service.image) }}" alt="Image"
                                 class="img-fluid">
                                </a>
                                <div class="post-entry-1-contents"> 
                                    <h2><a href="single.html">{{service.name}}</a></h2>
                                    <span class="meta d-inline-block mb-3">{{service.price}}€</span>
                                    <p><a href="{{ path('details_haircut', {'id': service.id}) }}" class="btn btn-primary">Plus d'info</a></p>
                                </div>
                            </div>
                        </div>
                        {% endfor %}      
                        <div class="col-12 mt-5 text-center">
                            {% include 'paginator/show.html.twig' %} 
                        </div> 
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- SERVICES END -->

            <!-- CHANGE BOOKING START -->
            {% block changeBooking %} 
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 66%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Etape 2 sur 3</div>
            </div>
            <div class="alert alert error">
                <h2>{% for message in app.flashes('error') %} {{ message }} {% endfor %}</h2>
            </div>
            <br>
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">
                            <table class="table table-striped">
                                <h3>Pour modifier ce RDV appuyer sur le bouton valider</h3>
                                <br>
                                <thead>
                                    <tr>
                                        <th scope="col">Récapitulatif</th>
                                        <th scope="col">Date et Heure du rdv</th>
                                        <th scope="col">Coupe de cheveux</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">Réservation</th>
                                        <td>{{startDate}}</td>
                                        <td>{{event.haircut.name}}</td>
                                    </tr>            
                                </tbody>
                            </table>
                            <br>
                            <a href="{{ path('event_update', {'idBookingOld': event.id}) }}"><button type="button" class="btn btn-primary">Valider</button></a>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- CHANGE BOOKING END -->

            <!-- MODIFY RESERVATION DATE START -->
            {% block modifyReservationDate %}
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Etape 3 sur 3</div>
            </div>
            <br>
            <h1> Selectionnez dans le planning la nouvelle date du RDV</h1>
            <br>
            <div id='calendar'></div>
            <br>
            {% endblock %}
            <!-- MODIFY RESERVATION DATE END -->

            <!-- SELECT THE BOOKING DATE TO MODIFY START -->
            {% block selectTheBookingDateToModify %}
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 33%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Etape 1 sur 3</div>
            </div>
            <div class="alert alert error">
                <h2>{% for message in app.flashes('error') %} {{ message }} {% endfor %}</h2>
            </div>
            <br>
            <h1> Cliquez sur la date à modifier</h1>
            <br>
            <div id='calendar'></div>
            <br>
            {% endblock %}
            <!-- SELECT THE BOOKING DATE TO MODIFY END -->

            <!-- DELETION OF THE RESERVATION DATE START -->
            {% block deletionOfTheReservationDate %}
            <br>
            <h1> Cliquez sur la date à supprimer</h1>
            <br>
            <div id='calendar'></div>
            <br>
            {% endblock %}
            <!-- DELETION OF THE RESERVATION DATE END -->

            <!-- ORDER SUMMARY START -->
            {% block orderSummary %}
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 66%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Etape 2 sur 3</div>
            </div>
            
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Récapitulatif</th>
                                        <th scope="col">Coupe de cheveux</th>
                                        <th scope="col">Prix</th>
                                        <th scope="col">date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">Réservation</th>
                                        <td>{{event.haircut.name}}</td>
                                        <td>{{event.haircut.price}}</td>
                                        <td>{{start}}</td>
                                    </tr>
                                </tbody>    
                            </table>
                            <a href="{{ path('event_payment') }}"><button type="button" class="btn btn-primary">Valider</button></a>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            <!-- ORDER SUMMARY END -->

            <!-- ONLINE PAYMENT START -->
            {% block onlinePayment %}
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Etape 3 sur 3</div>
            </div>
            <div class="site-section bg-light" id="contact-section">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5"> 
