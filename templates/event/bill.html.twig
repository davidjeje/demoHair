<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        {% block stylesheets %}
        <title>Salon</title>
    
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- BOOTSTRAP START -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <!-- BOOTSTRAP END -->

        <!-- FOLDER MAIN FONTS -->
        <link rel="stylesheet" href="{{ asset('fonts/icomoon/style.css') }}">
        <link rel="stylesheet" href="{{ asset('fonts/flaticon/font/flaticon.css') }}">
        <link rel="stylesheet" href="{{ asset('fonts/material-design-iconic-font/css/material-design-iconic-font.min.css') }}">
        <!-- FOLDER MAIN FONTS END -->

        <!-- FOLDER MAIN CSS -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker.css') }}">
        <link rel="stylesheet" href="{{ asset('css/jquery.fancybox.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/owl.theme.default.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/aos.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/sourcesanspro-font.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style2.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style3.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bill.css') }}">
        <!-- FOLDER MAIN FONTS End -->
        
        <!-- EXTERN LINK START -->
        <link href="https://fonts.googleapis.com/css?family=DM+Sans:300,400,700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.5.1/main.min.css" integrity="sha256-uq9PNlMzB+1h01Ij9cx7zeE2OR2pLAfRw3uUUOOPKdA=" crossorigin="anonymous">
        <!-- EXTERN LINK End -->
        {% endblock %}
    </head>
	<body>
		<div class="site-wrap" id="home-section">

            <!-- HEADER START -->
            {% block headerStart %}
            <header class="site-navbar site-navbar-target" role="banner">
                <div class="container">
                    <div class="row align-items-center position-relative">
                        <div class="col-3 ">
                            <div class="site-logo">
                                <a href="index.html">Demo Hair Coiffure</a>
                            </div>
                        </div> 
                        <div class="col-9  text-right"> 
                            <span class="d-inline-block d-lg-none"><a href="#" class="text-white site-menu-toggle js-menu-toggle py-5 text-white"><span class="icon-menu h3 text-white"></span></a></span>
                            <nav class="site-navigation text-right ml-auto d-none d-lg-block"  role="navigation"> 
                                <ul class="site-menu main-menu js-clone-nav ml-auto ">
                                    <li><a href="{{ path('home_page') }}" class="nav-link">Accueil</a></li>
                                    <li><a href="{{ path('services', {'page': 1}) }}" class="nav-link">Nos prestations</a></li>
                                    <li><a href="{{ path('about_of_company') }}" class="nav-link">Qui sommes nous</a></li>
                   
                                    {% if not is_granted('ROLE_USER')  %}
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="" role="button" aria-haspopup="true" aria-expanded="false">Connexion/Inscription</a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="{{ path('sign_up') }}">Inscription</a>
                                            <a class="dropdown-item" href="{{ path('sing_in') }}">Connexion</a>
                                        </div>
                                    </li>
                                    {% endif %}
                                    {% if is_granted('ROLE_USER')  %}
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="" role="button" aria-haspopup="true" aria-expanded="false">Compte</a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="{{ path('event_planning_update') }}">Modifier mes rendez-vous</a>
                                            <a class="dropdown-item" href="{{ path('event_planning_delete') }}">Supprimer mes rendez-vous</a>
                                            <a class="dropdown-item" href="{{ path('update_password') }}">Modifier son mot de passe</a>
                                            <a class="dropdown-item" href="{{ path('update_email_user') }}">Modifier son Email</a>
                                            <a class="dropdown-item" href="{{ path('update_number_user') }}">Modifier son numéro de téléphone</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
                                        </div>
                                    </li>
                                    {% endif %}
                                </ul>
                            </nav> 
                        </div>     
                    </div>
                </div>
            </header>
            {% endblock %}
            <!-- HEADER END -->

            <!-- HEADER PICTURE START -->
            {% block headerPictureStart %}
            <div class="ftco-blocks-cover-1">
                <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('{{ asset('images/'~picture.name) }}')">
                    <div class="container">
                        <div class="row align-items-center justify-content-center text-center">
                            <div class="col-md-7">
                                <h1 class="mb-3">Cheveux et Barbe</h1>
                                <p>Coiffeur uniquement pour les hommes.</p>
                                <p><a href="{{ path('about_of_company') }}" class="btn btn-primary">Plus d'info</a></p>
                            </div>
                        </div>
                    </div> 
                </div>
            </div>
            {% endblock %}
            <!-- HEADER PICTURE END -->
    	                        
            <!-- BILL START -->       
			<div class="receipt-content">
    			<div class="container bootstrap snippets bootdey">
					<div class="row">
						<div class="col-md-12">
							<div class="invoice-wrapper">
								<div class="intro">
						 			<strong>Facture</strong> 
								</div>

								<div class="payment-info">
									<div class="row">
										<div class="col-sm-6 text-left">
											<span>Date de la facture</span>
											<strong>{{dateOfDay}}</strong>
											<br>
											<span>Date de paiement</span>
											<strong>{{dateOfDay}}</strong>
										</div>
										<div class="col-sm-6 text-right">
											<span>Numéro de la facture</span>
											<strong>1233</strong>
										</div>
									</div>
								</div>

								<div class="payment-details">
									<div class="row">
										<div class="col-sm-6">
											<span>Client</span>
											<strong>
												{{ app.user.name }}
											</strong>
											<p>
												{{ app.user.number }}
												<br>
												<a href="#">
													{{ app.user.email }}
												</a>
											</p>
										</div>
										<div class="col-sm-6 text-right">
											<span>Paiement à</span>
											<strong>
												Demo Hair Coiffure
											</strong>
											<p>
												8 Rue Raymond Bellague, 
												<br>
												77520 Donnemarie-Dontilly. 
												<br>											FRANCE 
												<br>
												Tel: 06 58 54 29 89
											</p>
										</div>
									</div>
								</div>

								<div class="line-items">
									<div class="headers clearfix">
										<div class="row">
											<div class="col-sm-6" >Description</div>
											<div class="col-sm-6 text-right">Somme</div>
										</div>
									</div>
									<div class="items">
										<div class="row item">
											<div class="col-sm-6 desc">
												1 {{eventNewRegistrer.haircut.name}}
											</div>
											<div class="col-sm-6 amount text-right">
												{{eventNewRegistrer.haircut.price}}€
											</div>
										</div>
									</div>
									<div class="total text-right">
										<div class="field grand-total">
											Total TTC<span>{{eventNewRegistrer.haircut.price}}€</span>
										</div>
									</div>

									<div class="print">
										<a href="{{ path('user_bill_upload') }}">
											<i class="fa fa-print"></i>
											Téléchargement
										</a>
									</div>
								</div>
							</div>

							<div class="footer">
								Entreprise Hairdresser coiffure
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- BILL END -->

		</div>
	</body>
</html>                  